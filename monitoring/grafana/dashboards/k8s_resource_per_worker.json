      "description": "Instant values per worker node (cores). One row per: usage/requests/limits/node max.",
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": {
              "type": "auto"
            },
            "footer": {
              "reducers": []
            },
            "inspect": false
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Value"
            },
            "properties": [
              {
                "id": "unit",
                "value": "cores"
              },
              {
                "id": "min",
                "value": 0
              }
            ]
          }
        ]
      },
      "gridPos": {
        "h": 6,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "id": 101,
      "maxPerRow": 6,
      "options": {
        "cellHeight": "sm",
        "showHeader": true
      },
      "pluginVersion": "12.4.0-20648027705",
      "repeat": "node",
      "repeatDirection": "h",
      "targets": [
        {
          "editorMode": "code",
          "expr": "sum(rate(container_cpu_usage_seconds_total{container!=\"\",container!=\"POD\"}[5m]) * on(namespace,pod) group_left(node) kube_pod_info{node=\"$node\"})",
          "instant": true,
          "legendFormat": "Usage (cores)",
          "refId": "A"
        },
        {
          "editorMode": "code",
          "expr": "sum(kube_pod_container_resource_requests{resource=\"cpu\"} * on(namespace,pod) group_left(node) kube_pod_info{node=\"$node\"})",
          "instant": true,
          "legendFormat": "Requests (cores)",
          "refId": "B"
        },
        {
          "editorMode": "code",
          "expr": "sum(kube_pod_container_resource_limits{resource=\"cpu\"} * on(namespace,pod) group_left(node) kube_pod_info{node=\"$node\"})",
          "instant": true,
          "legendFormat": "Limits (cores)",
          "refId": "C"
        },
        {
          "editorMode": "code",
          "expr": "max(kube_node_status_allocatable{resource=\"cpu\",node=\"$node\"})",
          "instant": true,
          "legendFormat": "Node max (allocatable)",
          "refId": "D"
        }
      ],
      "title": "CPU — $node (table)",
      "transformations": [
        {
          "id": "seriesToRows",
          "options": {}
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true
            },
            "renameByName": {
              "Metric": "Type",
              "Value": "Value"
            }
          }
        }
      ],
      "type": "table"
    },
