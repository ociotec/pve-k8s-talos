        {
          "editorMode": "code",
          "expr": "100 * (sum(kube_pod_container_resource_requests{resource=\"cpu\"} * on(namespace,pod) group_left(node) kube_pod_info{node=\"$node\"}) / clamp_min(max(kube_node_status_allocatable{resource=\"cpu\",node=\"$node\"}), 0.001))",
          "legendFormat": "requests",
          "refId": "B"
        },
        {
          "editorMode": "code",
          "expr": "100 * (sum(kube_pod_container_resource_limits{resource=\"cpu\"} * on(namespace,pod) group_left(node) kube_pod_info{node=\"$node\"}) / clamp_min(max(kube_node_status_allocatable{resource=\"cpu\",node=\"$node\"}), 0.001))",
          "legendFormat": "limits",
          "refId": "C"
        },
        {
          "editorMode": "code",
          "expr": "100",
          "legendFormat": "node max",
          "refId": "D"
