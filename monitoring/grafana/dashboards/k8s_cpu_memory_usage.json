{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "description": "K8s Pod/Container resources (CPU & Memory) with Requests/Limits from Prometheus (kube-state-metrics + cAdvisor/kubelet).",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": { "defaults": { "min": 0, "unit": "cores" }, "overrides": [] },
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 0 },
      "id": 1,
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["lastNotNull", "max"] },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "editorMode": "code",
          "expr": "sum by (namespace,pod,container) (rate(container_cpu_usage_seconds_total{namespace=~\"$namespace\",pod=~\"$pod\",container=~\"$container\",container!=\"\",container!=\"POD\"}[5m]))",
          "legendFormat": "CPU usage {{namespace}}/{{pod}}/{{container}}",
          "refId": "A"
        },
        {
          "editorMode": "code",
          "expr": "sum by (namespace,pod,container) (kube_pod_container_resource_requests{namespace=~\"$namespace\",pod=~\"$pod\",container=~\"$container\",resource=\"cpu\"})",
          "legendFormat": "CPU request {{namespace}}/{{pod}}/{{container}}",
          "refId": "B"
        },
        {
          "editorMode": "code",
          "expr": "sum by (namespace,pod,container) (kube_pod_container_resource_limits{namespace=~\"$namespace\",pod=~\"$pod\",container=~\"$container\",resource=\"cpu\"})",
          "legendFormat": "CPU limit {{namespace}}/{{pod}}/{{container}}",
          "refId": "C"
        }
      ],
      "title": "CPU (cores): usage vs requests/limits",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": { "defaults": { "min": 0, "unit": "percent" }, "overrides": [] },
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 0 },
      "id": 2,
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["lastNotNull", "max"] },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "editorMode": "code",
          "expr": "100 * (sum by (namespace,pod,container) (rate(container_cpu_usage_seconds_total{namespace=~\"$namespace\",pod=~\"$pod\",container=~\"$container\",container!=\"\",container!=\"POD\"}[5m])) / clamp_min(sum by (namespace,pod,container) (kube_pod_container_resource_requests{namespace=~\"$namespace\",pod=~\"$pod\",container=~\"$container\",resource=\"cpu\"}), 0.001))",
          "legendFormat": "%CPU vs request {{namespace}}/{{pod}}/{{container}}",
          "refId": "A"
        },
        {
          "editorMode": "code",
          "expr": "100 * (sum by (namespace,pod,container) (rate(container_cpu_usage_seconds_total{namespace=~\"$namespace\",pod=~\"$pod\",container=~\"$container\",container!=\"\",container!=\"POD\"}[5m])) / clamp_min(sum by (namespace,pod,container) (kube_pod_container_resource_limits{namespace=~\"$namespace\",pod=~\"$pod\",container=~\"$container\",resource=\"cpu\"}), 0.001))",
          "legendFormat": "%CPU vs limit {{namespace}}/{{pod}}/{{container}}",
          "refId": "B"
        }
      ],
      "title": "CPU (%): usage vs request/limit",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": { "defaults": { "min": 0, "unit": "bytes" }, "overrides": [] },
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 10 },
      "id": 3,
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["lastNotNull", "max"] },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "editorMode": "code",
          "expr": "sum by (namespace,pod,container) ((container_memory_working_set_bytes{namespace=~\"$namespace\",pod=~\"$pod\",container=~\"$container\",container!=\"\",container!=\"POD\"}) or (container_memory_usage_bytes{namespace=~\"$namespace\",pod=~\"$pod\",container=~\"$container\",container!=\"\",container!=\"POD\"}))",
          "legendFormat": "Mem usage {{namespace}}/{{pod}}/{{container}}",
          "refId": "A"
        },
        {
          "editorMode": "code",
          "expr": "sum by (namespace,pod,container) (kube_pod_container_resource_requests{namespace=~\"$namespace\",pod=~\"$pod\",container=~\"$container\",resource=\"memory\"})",
          "legendFormat": "Mem request {{namespace}}/{{pod}}/{{container}}",
          "refId": "B"
        },
        {
          "editorMode": "code",
          "expr": "sum by (namespace,pod,container) (kube_pod_container_resource_limits{namespace=~\"$namespace\",pod=~\"$pod\",container=~\"$container\",resource=\"memory\"})",
          "legendFormat": "Mem limit {{namespace}}/{{pod}}/{{container}}",
          "refId": "C"
        }
      ],
      "title": "Memory (bytes): usage vs requests/limits",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": { "defaults": { "min": 0, "unit": "percent" }, "overrides": [] },
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 10 },
      "id": 4,
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["lastNotNull", "max"] },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "editorMode": "code",
          "expr": "100 * (sum by (namespace,pod,container) ((container_memory_working_set_bytes{namespace=~\"$namespace\",pod=~\"$pod\",container=~\"$container\",container!=\"\",container!=\"POD\"}) or (container_memory_usage_bytes{namespace=~\"$namespace\",pod=~\"$pod\",container=~\"$container\",container!=\"\",container!=\"POD\"})) / clamp_min(sum by (namespace,pod,container) (kube_pod_container_resource_requests{namespace=~\"$namespace\",pod=~\"$pod\",container=~\"$container\",resource=\"memory\"}), 1))",
          "legendFormat": "%Mem vs request {{namespace}}/{{pod}}/{{container}}",
          "refId": "A"
        },
        {
          "editorMode": "code",
          "expr": "100 * (sum by (namespace,pod,container) ((container_memory_working_set_bytes{namespace=~\"$namespace\",pod=~\"$pod\",container=~\"$container\",container!=\"\",container!=\"POD\"}) or (container_memory_usage_bytes{namespace=~\"$namespace\",pod=~\"$pod\",container=~\"$container\",container!=\"\",container!=\"POD\"})) / clamp_min(sum by (namespace,pod,container) (kube_pod_container_resource_limits{namespace=~\"$namespace\",pod=~\"$pod\",container=~\"$container\",resource=\"memory\"}), 1))",
          "legendFormat": "%Mem vs limit {{namespace}}/{{pod}}/{{container}}",
          "refId": "B"
        }
      ],
      "title": "Memory (%): usage vs request/limit",
      "type": "timeseries"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": ["kubernetes", "prometheus", "kube-state-metrics", "cadvisor"],
  "templating": {
    "list": [
      {
        "current": { "selected": false, "text": "Prometheus", "value": "Prometheus" },
        "hide": 0,
        "includeAll": false,
        "label": "Datasource",
